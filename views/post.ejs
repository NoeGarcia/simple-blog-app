<!-- views/post.ejs -->
<%- include('partials/header') %>
<div class="container mt-4">
    <div class="card mb-4">
        <% if (post.image) { %>
            <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
        <% } %>
        <div class="card-body">
            <h2 class="card-title"><%= post.title %></h2>
            <p class="card-text"><%= post.content %></p>
            <p class="card-text"><small class="text-muted">Posted on <%= post.date.toLocaleDateString() %></small></p>
            <% if (post.author === 'user1') { %> <!-- Simplified for demo purposes -->
                <a href="/edit/<%= post.id %>" class="btn btn-warning">Edit</a>
                <a href="/delete/<%= post.id %>" class="btn btn-danger">Delete</a>
            <% } %>
            <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
        </div>
    </div>
</div>
<%- include('partials/footer') %>